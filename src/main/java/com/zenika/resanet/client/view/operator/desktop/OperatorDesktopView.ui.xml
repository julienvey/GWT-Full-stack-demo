<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:with field="resources" type="com.zenika.resanet.client.view.resources.ResanetResources"/>
  <ui:with field="messages" type="com.zenika.resanet.client.view.resources.ResanetMessages"/>

  <g:FlowPanel addStyleNames="{resources.style.loginPanel}">
    <g:SimplePanel addStyleNames="{resources.style.logo}"/>
    <g:FlowPanel>
      <g:HTMLPanel>
        <table>
          <tr>
            <td><ui:text from="{messages.login} :"/></td>
            <td>
              <g:TextBox ui:field="loginTextBox"/>
            </td>
          </tr>
          <tr>
            <td><ui:text from="{messages.lastName} :"/></td>
            <td>
              <g:TextBox ui:field="firstNameTextBox"/>
            </td>
          </tr>
          <tr>
            <td><ui:text from="{messages.firstName} :"/></td>
            <td>
              <g:TextBox ui:field="lastNameTextBox"/>
            </td>
          </tr>
          <tr>
            <td><ui:text from="{messages.phone} :"/></td>
            <td>
              <g:TextBox ui:field="phoneTextBox"/>
            </td>
          </tr>
          <tr>
            <td><ui:text from="{messages.email} :"/></td>
            <td>
              <g:TextBox ui:field="mailTextBox"/>
            </td>
          </tr>
          <tr>
            <td><ui:text from="{messages.role} :"/></td>
            <td>
              <g:TextBox ui:field="roleTextBox"/>
            </td>
          </tr>
          <tr>
            <td><ui:text from="{messages.password} :"/></td>
            <td>
              <g:PasswordTextBox ui:field="passwordTextBox"/>
            </td>
          </tr>
        </table>
      </g:HTMLPanel>
      <g:Button ui:field="saveButton" text="{messages.saveModifications}" addStyleNames="btn"/>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>